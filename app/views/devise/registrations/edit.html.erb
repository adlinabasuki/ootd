<%# <h2 class="text-center">Edit <%= resource_name.to_s.humanize</h2> %>
<h2 class="text-center" style="padding-top: 3.5em">Edit your profile</h2>
<br>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true,
                label: false,
                placeholder: "First name",
                input_html: {
                  class: "text-center input-background"
                   } %>
    <%= f.input :last_name, required: true,
                label: false,
                placeholder: "Last name",
                input_html: {
                  class: "text-center input-background"
                   } %>
    <%= f.input :email, required: true,
                label: false,
                placeholder: "Email",
                input_html: {
                  class: "text-center input-background"
                   } %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "leave blank if you don't want to change it",
                required: false,
                label: false,
                placeholder: "New password",
                input_html: {
                  autocomplete: "new-password",
                  class: "text-center input-background"
                   } %>
    <%= f.input :password_confirmation,
                required: false,
                label: false,
                  placeholder: "Confirm new password",
                input_html: {
                  autocomplete: "new-password",
                  class: "text-center input-background"
                   } %>
    <%= f.input :current_password,
                hint: "current password needed to confirm your changes",
                required: true,
                label: false,
                  placeholder: "Current password",
                input_html: {
                  autocomplete: "current-password",
                  class: "text-center input-background"
                   } %>
  </div>

  <div class="form-actions" style="padding-top: 1em">
    <%= f.button :submit, "UPDATE" , class:"btn btn-primary"%>
  </div>
<% end %>

